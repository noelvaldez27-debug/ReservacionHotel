@model ReserHotel.Models.ViewModels.ReservaCreateViewModel
<div class="border rounded p-3">
 <div class="d-flex justify-content-between"><span>Noches</span><strong>@Model.Noches</strong></div>
 <div class="d-flex justify-content-between"><span>Habitación</span><strong>@Model.HabitacionId</strong></div>
 <div class="d-flex justify-content-between"><span>Subtotal habitación</span><strong>@Model.SubtotalHabitacion.ToString("C")</strong></div>
 <div class="d-flex justify-content-between"><span>Servicios</span><strong>@Model.SubtotalServicios.ToString("C")</strong></div>
 <div class="d-flex justify-content-between"><span>Descuento</span><strong>@(Model.Descuento?.ToString("C") ?? "-")</strong></div>
 <hr />
 <div class="d-flex justify-content-between"><span>Total</span><strong>@Model.Total.ToString("C")</strong></div>
</div>